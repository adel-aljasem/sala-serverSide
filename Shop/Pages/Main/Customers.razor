                        @foreach (var customer in Users)
                        {
                            <table class="table text-nowrap">
                                <tbody id="table_list_customer" class="infinite-scroll">
                                    <tr class="table-row customer-row">
                                        <td class="order-customer customer-td">
                                            <div class="media-left media-middle">
                                                <div class="checkbox-area">
                                                    <div class="checker">
                                                        <span>
                                                            <input type="checkbox" data-customer-name="adelaljasem" class="styled checkbox_order selected_customers" value="6617879" data-name="adel aljasem">
                                                        </span>
                                                    </div>
                                                </div>
                                                <NavLink href="@($"customers/{customer.Id}")"><img src="https://assets.salla.sa/cp/assets/images/avatar_male.png" class="img-circle" alt=""></NavLink>
                                            </div>
                                            <div class="media-left media-body-middle">
                                                <div>
                                                    <NavLink href="@($"customers/{customer.Id}")">
                                                        @customer.Name
                                                    </NavLink>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-right" data-title="المدينة"><span class="text-muted">جدة</span></td>
                                    </tr>

                                </tbody>
                            </table>
